---
import Layout from '../layouts/Layout.astro';
---

<Layout
		title="Page Not Found"
		description="The page you're looking for doesn't exist."
>
	<div class="error-page">
		<div class="container-narrow">
			<h1>404</h1>
			<h2>Recipe Not Found</h2>
			<p>
				Looks like this recipe got eaten! The page you're looking for doesn't exist.
			</p>
			<div class="error-actions">
				<a href="/" class="btn">
					üè† Back to Recipes
				</a>
				<a href="/submit/" class="btn btn-secondary">
					‚úçÔ∏è Submit a Recipe
				</a>
			</div>
		</div>
	</div>
</Layout>

<style>
    .error-page {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: var(--space-3xl) 0;
    }

    .error-page h1 {
        font-size: 6rem;
        color: var(--color-primary);
        margin-bottom: var(--space-md);
        line-height: 1;
    }

    .error-page h2 {
        font-size: 2rem;
        margin-bottom: var(--space-lg);
    }

    .error-page p {
        font-size: 1.25rem;
        color: var(--color-text-light);
        margin-bottom: var(--space-2xl);
    }

    .error-actions {
        display: flex;
        gap: var(--space-md);
        justify-content: center;
        flex-wrap: wrap;
    }

    @media (max-width: 640px) {
        .error-page h1 {
            font-size: 4rem;
        }

        .error-page h2 {
            font-size: 1.5rem;
        }

        .error-actions {
            flex-direction: column;
        }

        .error-actions .btn {
            width: 100%;
        }
    }
</style>
